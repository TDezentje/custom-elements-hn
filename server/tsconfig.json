{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "sourceMap": false,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2016",
        "jsx": "react",
        "jsxFactory": "render",
        "noImplicitAny": false,
        "types": [
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ],
        "lib": [
            "es2015",
            "es2016",
            "dom"
        ],
        "paths": {
            "*": [
                "*",
                "../../client/src/*"
            ]
        }
    }
}