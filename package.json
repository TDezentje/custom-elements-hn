{
    "name": "custom-elements-hn",
    "version": "1.0.0",
    "description": "Hacker News build with Typescript on top of custom elements",
    "license": "MIT",
    "author": "Tom Dezentje",
    "scripts": {
        "create-assets": "node ./build/create-assets.js",
        "build": "webpack --config webpack.config.js && npm run create-assets",
        "watch": "concurrently  \"webpack --config webpack.config.js --progress --watch\" \"nodemon ./dist/server.js\"",
        "start": "node ./dist/server.js"
    },
    "dependencies": {
        "whatwg-fetch": "2.0.3",
        "promise-polyfill": "6.0.2",
        "@webcomponents/custom-elements": "1.0.0",
        "express": "4.15.3",
        "node-fetch": "1.7.0",
        "mustache": "2.3.0",
        "compression": "1.6.2"
    },
    "devDependencies": {
        "typescript": "2.3.3",
        "ts-loader": "2.1.0",
        "webpack": "2.6.0",
        "style-loader": "0.18.1",
        "cssnano": "3.10.0",
        "sass-loader": "6.0.3",
        "node-sass": "4.5.1",
        "postcss-loader": "2.0.5",
        "sugarss": "1.0.0",
        "autoprefixer": "7.1.1",
        "html-loader": "0.4.5",
        "node-uglifier": "0.5.4",
        "@types/node": "7.0.14",
        "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony-v2.8.22",
        "uglifyjs-webpack-plugin": "0.4.3",
        "deepmerge": "1.3.2",
        "@types/express": "4.0.35",
        "nodemon": "1.11.0",
        "sw-precache-webpack-plugin":"0.9.2",
        "webpack-cleanup-plugin": "0.5.1",
        "concurrently": "3.4.0"
    }
}
